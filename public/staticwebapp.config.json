{
  "routes": [
    { "route": "/login.html", "allowedRoles": ["anonymous"] },
    { "route": "/unauthorized.html", "allowedRoles": ["anonymous"] },
    { "route": "/api/*", "allowedRoles": ["anonymous"] },
    { "route": "/*", "allowedRoles": ["approved"] }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/login.html",
      "/unauthorized.html",
      "/static/*",
      "/books/*",
      "/favicon.ico",
      "/manifest.json",
      "/logo192.png",
      "/logo512.png"
    ]
  },
  "responseOverrides": {
    "401": { "redirect": "/login.html", "statusCode": 302 },
    "403": { "redirect": "/unauthorized.html", "statusCode": 302 }
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "same-origin"
  }
}


