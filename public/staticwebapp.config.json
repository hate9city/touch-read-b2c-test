{
  "routes": [
    { 
      "route": "/login.html", 
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=300"
      }
    },
    { 
      "route": "/unauthorized.html", 
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=300"
      }
    },
    { 
      "route": "/api/*", 
      "allowedRoles": ["anonymous"] 
    },
    { 
      "route": "/static/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    { 
      "route": "/books/*",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    { 
      "route": "/*", 
      "allowedRoles": ["approved"],
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/login.html",
      "/unauthorized.html",
      "/static/*",
      "/books/*",
      "/favicon.ico",
      "/manifest.json",
      "/logo192.png",
      "/logo512.png",
      "/.auth/*"
    ]
  },
  "responseOverrides": {
    "401": { 
      "redirect": "/login.html", 
      "statusCode": 302 
    },
    "403": { 
      "redirect": "/unauthorized.html", 
      "statusCode": 302 
    }
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "same-origin"
  }
}


